<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomRightRadius="20dp" android:topRightRadius="20dp"/>
        </shape>
    </item>

    <item android:left="20dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/yellow" android:dashWidth="5dp" android:dashGap="5dp" />
            <corners android:bottomRightRadius="20dp" android:topRightRadius="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="2dp" android:color="@color/purple" android:dashWidth="10dp" android:dashGap="10dp" />
            <corners android:bottomRightRadius="20dp" android:topRightRadius="20dp"/>
        </shape>
    </item>

</layer-list>